	  <input name="newart[image]" type="text" value="<%= article.image %>"  title="image"><br>
	  <textarea name = "newart[content]" style="height: 60vh; width: 80%;margin-left:10%" required><%= article.content %></textarea>
	  <input type=submit value="SUBMIT">
     
  </div>
</form>





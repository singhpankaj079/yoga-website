<% include partials/header.ejs %>



<form method="post" action = "/articles/<%= article._id.toString() %>?_method=PUT" style = "margin: auto; height: 100%">

  <div class = "form">
      <h1 style="text-align: center; color:purple"> YOUR ARTICLE</h1> 
	  <input name="newart[title]" type="text" value="<%= article.title %>" title="name" required><br>

<% include partials/header.ejs %>
<div class="faqs">
<h1> Frequently Asked Questions </h1>
<% for (var i =0 ; i<faqs.length; i++){ %>
<% if (currentUser && currentUser.username === 'admin') { %>
                  <form method="post" action="/faqs/<%= faqs[i]._id.toString() %>?_method=DELETE" style="width: 60px;float: right">
                       <input class="delete" style ="width: 100%; height: 22px" type = "submit" value="Delete">
                  </form>
     <% } %>

	<div class="faqq">Q.<%= faqs[i].question %></div>
    <div class="faqa">A.<%= faqs[i].answer %></div>
<% } %>
</div>
<% if (currentUser && currentUser.username === 'admin'){ %>
     <form method="post" action = "/faqs" style = "margin: auto">

  <div class = "form">
      <h1 style="text-align: center; color:purple"> ADD FAQ </h1> 
	  <textarea style="width: 100%" name="faq[question]" placeholder="Question" title="Question" required></textarea><br>
	  <textarea style="width: 100%" name="faq[answer]"  placeholder="Answer" title="Answer" required></textarea><br>
	  <input type=submit value="ADD">
     
  </div>
</form>
<% } %>
</body>
</html>
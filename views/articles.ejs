<% include partials/header.ejs %>
<div class = "container"> 
 <% for (var i = 0; i<articles.length; i++) { %>
 <% if (articles[i].new === 'yes') { %>
  <div class = "post" >
	  <h2 style ="text-align:center; color: #000880"> <%= articles[i].title %>   

	  </h2>
	 <% if (articles[i].image !=="") { %>
	    <img style = "width: 200px; margin-left: 20px;" src = "<%= articles[i].image %>" alt = "<%= articles[i].title %>">
	 <% } %>

	 <% var title = articles[i].title.replace(/ /g, "-") %>
	  <p> <%- articles[i].description %> <a href = "/articles/<%= articles[i]._id.toString() %>/<%= title.toLowerCase() %>">Read more</a></p>
  </div>
  <% } %>
  <% } %>

<br>
<br>
<% if (currentUser && currentUser.username === 'admin') { %>
<button style="margin: auto; display: block"> <a href = "/articles/new" style = "color: inherit;">Contribute an article</a></button>
<% } %>
</div>

<% include partials/footer.ejs %>